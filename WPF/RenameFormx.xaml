<UserControl x:Class="ProjectTreeRenamer.RenameFormx"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectTreeRenamer"
             mc:Ignorable="d" Width="306.656" Height="135.139">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="114*"/>
            <ColumnDefinition Width="193*"/>
        </Grid.ColumnDefinitions>
        <Rectangle x:Name="BackGround" Fill="#FFF4F4F5" Stroke="Black" Grid.ColumnSpan="2" Height="138" VerticalAlignment="Top"/>

        <Button x:Name="btnReplace" Content="Replace" HorizontalAlignment="Left" Margin="29,104,0,0" VerticalAlignment="Top" Width="75" Height="20" IsDefault="True" TabIndex="2"/>
