        <TextBox x:Name="txtSearch" HorizontalAlignment="Left" Height="22" TextWrapping="Wrap" VerticalAlignment="Top" Width="145" Margin="30,24,0,0" Grid.Column="1" TabIndex="0"/>
        <TextBox x:Name="txtReplace" HorizontalAlignment="Left" Height="22" Margin="30,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145" Grid.Column="1" TabIndex="1"/>
        <Label x:Name="lblSearch" Content="Search" HorizontalAlignment="Left" Margin="32,22,0,0" VerticalAlignment="Top" Height="26" Width="45"/>
        <Label x:Name="lblReplace" Content="Replace" HorizontalAlignment="Left" Margin="29,62,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.501,-0.012" Height="26" Width="51"/>

    </Grid>
</UserControl>
